SHELL = /bin/sh

suffix = @install_suffix@

prefix = @prefix@
exec_prefix = @exec_prefix@
srcdir = @srcdir@

VPATH = $(srcdir)

bindir = @bindir@
libdir = @libdir@

CXX = @CXX@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

ifeq (@srcdir@,.)
INCLUDE_PATH = -I. -I..
else
INCLUDE_PATH = -I. -I.. -I$(srcdir) -I$(srcdir)/..
endif

CPPFLAGS = $(INCLUDE_PATH) @CPPFLAGS@ @DEFS@ @PICFLAG@
CFLAGS = @WARNING_FLAGS@ @CFLAGS@
LDFLAGS = @LDFLAGS@

O = ttb.o statement.o ttb_signal.o propagate-sig.o propagate-lpm.o propagate-log.o

all: dep ttb.tgt

check: all

clean:
	rm -rf *.o dep ttb.tgt

distclean: clean
	rm -f Makefile config.log

cppcheck: $(O:.o=.cc)
	cppcheck --enable=all -f $(INCLUDE_PATH) $^

Makefile: $(srcdir)/Makefile.in ../config.status
	cd ..; ./config.status --file=tgt-ttb/$@

dep:
	mkdir dep

%.o: %.cc
	$(CXX) $(CPPFLAGS) $(CFLAGS) @DEPENDENCY_FLAG@ -c $< -o $*.o
	mv $*.d dep

ifeq (@WIN32@,yes)
  TGTLDFLAGS=-L.. -livl
  TGTDEPLIBS=../libivl.a
else
  TGTLDFLAGS=
  TGTDEPLIBS=
endif

ttb.tgt: $O $(TGTDEPLIBS)
	$(CXX) @shared@ $(LDFLAGS) -o $@ $O $(TGTLDFLAGS)

install: all installdirs $(libdir)/ivl$(suffix)/ttb.tgt $(INSTALL_DOC) $(libdir)/ivl$(suffix)/ttb.conf $(libdir)/ivl$(suffix)/ttb-s.conf

$(libdir)/ivl$(suffix)/ttb.tgt: ./ttb.tgt
	$(INSTALL_PROGRAM) ./ttb.tgt "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb.tgt"

$(libdir)/ivl$(suffix)/ttb.conf: $(srcdir)/ttb.conf
	$(INSTALL_DATA) $(srcdir)/ttb.conf "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb.conf"

$(libdir)/ivl$(suffix)/ttb-s.conf: $(srcdir)/ttb-s.conf
	$(INSTALL_DATA) $(srcdir)/ttb-s.conf "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb-s.conf"


installdirs: $(srcdir)/../mkinstalldirs
	$(srcdir)/../mkinstalldirs "$(DESTDIR)$(bindir)" "$(DESTDIR)$(libdir)/ivl$(suffix)"

uninstall:
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb.tgt"
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb.conf"
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/ttb-s.conf"


-include $(patsubst %.o, dep/%.d, $O)
